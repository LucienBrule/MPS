/*
 * UART information:
 * 	textbook page 221
 * 	reference manual page 1241
 * 	USART1 and 6 setup in uart.c
 */
#include "init.h"

// Main Execution Loop
int main(void) {
	//Initialize the system
	Sys_Init();
	printf("[printf] before\r\n");

	//Initialize GPIO for UART
	//	init uart populates a uart struct.
	UART_HandleTypeDef uart6;
	initUart(&uart6,9600,USART6);
			uart_print(&uart6,"[printf] 9600\r\n");
			uart_print(&USB_UART,"[printf] 115200\r\n");
	while(1){
		printf("yolo\r\n");
		//test = ~test;
		uart_putchar(&uart6,'0');
		HAL_Delay(100);


		char uart1_recv, uart6_recv;
		uart6_recv = uart_getchar(&USB_UART);
		uart1_recv = uart_getchar(&USB_UART);
		uart_putchar(&uart6,uart1_recv);
		uart_putchar(&USB_UART,uart6_recv);

	}

}
